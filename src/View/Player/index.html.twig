                <p class="card-text">
                  {{ attrapeur.lastName }}<br/>
                  {{ attrapeur.firstName }}<br/>
                  {{ attrapeur.size }} cm<br/>
                  {{ attrapeur.getAge }} ans<br/>
                </p>
              </div>
            </div>
        {% else %}
            <p>Nothing to display</p>
        {% endfor %}
    </div>
</div>

{% endblock %}
