              <div class="card-body">
                <p class="card-text">
                  {{ poursuiveur.lastName }}<br/>
                  {{ poursuiveur.firstName }}<br/>
                  {{ poursuiveur.size }} cm<br/>
                  {{ poursuiveur.getAge }} ans<br/>
                </p>
              </div>
            </div>
        {% else %}
            <p>Nothing to display</p>
        {% endfor %}
    </div>

    <h2>Batteurs</h2>
