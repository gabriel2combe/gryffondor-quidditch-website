        {% for batteur in batteurs %}
            <div class="card" style="width: 200px;">
              <img class="card-img-top" style="width: 200px; height: 250px;" src="http://via.placeholder.com/200x250" alt="Photo de {{ batteur.lastName }} {{ batteur.firstName }}">
              <div class="card-body">
                <p class="card-text">
                  {{ batteur.lastName }}<br/>
                  {{ batteur.firstName }}<br/>
                  {{ batteur.size }} cm<br/>
                  {{ batteur.getAge }} ans<br/>
                </p>
              </div>
            </div>
        {% else %}
            <p>Nothing to display</p>
        {% endfor %}
    </div>

    <h2>Attrapeur</h2>
