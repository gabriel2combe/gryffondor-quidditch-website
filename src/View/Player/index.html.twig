{% extends 'layout.html.twig' %}

{% block title %}Composition de l'équipe{% endblock %}

{% block content %}

<div class="container-fluid">

    <div class="row d-flex justify-content-around">
        <h1>Composition de l'équipe</h1>
    </div>

    <h2>Gardien</h2>
    <div class="row d-flex justify-content-around">
        {% for gardien in gardiens %}
            <div class="card" style="width: 200px;">
              <img class="card-img-top" style="width: 200px; height: 250px;" src="http://via.placeholder.com/200x250" alt="Photo de {{ gardien.lastName }} {{ gardien.firstName }}">
              <div class="card-body">
                <p class="card-text">
                  {{ gardien.lastName }}<br/>
                  {{ gardien.firstName }}<br/>
                  {{ gardien.size }} cm<br/>
                  {{ gardien.getAge }} ans<br/>
                </p>
              </div>
            </div>
        {% else %}
            <p>Nothing to display</p>
        {% endfor %}
    </div>

    <h2>Poursuiveurs</h2>
    <div class="row d-flex justify-content-around">
        {% for poursuiveur in poursuiveurs %}
            <div class="card" style="width: 200px;">
