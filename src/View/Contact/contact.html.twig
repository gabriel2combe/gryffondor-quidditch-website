{% extends 'layout.html.twig' %}
{% block title %}Nous contacter{% endblock %}
{% block stylesheet %}
{{ parent() }}
<link rel="stylesheet" type="text/css" href="../assets/css/contact.css">
{% endblock %}


{% block content %}
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <header class="text-center">
                        <h2>Contactez-nous <img src="/assets/images/plume.png"></h2>
                        <p>N'hésitez pas à nous poser des questions.<br>Nous nous ferons un plaisir de vous répondre rapidement.</p>
                    </header>
                </div>
            </div>
            <div class="row">
                <ul id="Contact__informations" class="col-xs-12 col-md-4">

                    <li>
                        <a href="/contact#Contact__map" title="Google map The Market Tavern">
                            <i class="fas fa-compass fa-2x"></i>
                            <p>Adresse&nbsp;:</p>
                            <p>15 rue Rode<br>33 000 Bordeaux</p>
                        </a>
                    </li>

                    <li>
                        <div>
                            <i class="fab fa-earlybirds fa-2x"></i>
                            <p>Volière Hiboux&nbsp;:</p>
                            <p>Poudlard<br>Volière de la tour d'astronomie</p>
                        </div>
                    </li>

                    <li>
                        <div>
                            <i class="fa fa-paper-plane fa-2x"></i>
                            <p>E-mail&nbsp;:</p>
                            <p>themarkettavernbdx[a]gmail.com</p>
                        </div>
                    </li>
                </ul>
                <form name="contact_form" method="post" action="/contact" class="col-xs-12 col-md-8">
                    <div class="form--item">
                        <label for="contact_form_email"><span>E-mail&nbsp;*</span></label>
                        <input type="email" id="contact_form_email" name="contact_form_email" required="required" placeholder="Votre adresse email">
                    </div>
                    <div class="form--item">
                        <label for="contact_form_subject"><span>Sujet&nbsp;*</span></label>
                        <select id="contact_form_subject" name="contact_form_subject">
                            <option value="candidature">Candidature</option>
                            <option value="demande_informations">Demande d'informations</option>
                            <option value="autres">Autres</option>
                        </select>
                    </div>
                    <div class="form--item">
                        <label for="contact_form_message"><span>Message&nbsp;*</span></label>
                        <textarea id="contact_form_message" name="contact_form_message" required="required" placeholder="Votre message ici"></textarea>
                    </div>

                    <div class="text-center">
                        <button type="submit" id="contact_form_submit" name="contact_form[submit]" class="button submit_button">Envoyer</button>
                    </div>
                </form>
            </div>
        </div>
{% endblock %}
    
 