{% extends 'layout.html.twig' %}
{% block title %}Nous contacter{% endblock %}
{% block stylesheet %}
{{ parent() }}
<link rel="stylesheet" type="text/css" href="../assets/css/contact.css">
{% endblock %}


{% block content %}
        <div class="container">
            {% if error != "" %}
                <div class="alert alert-warning" role="alert">
                    {{ error|raw }}
                </div>
            {% elseif sendEmail == "successful" %}
                <div class="alert alert-success" role="alert">
                    Votre email a bien été envoyé. Nous vous contacterons dans les plus brefs délais.
                </div>
            {% elseif sendEmail != "" %}
                <div class="alert alert-danger" role="alert">
                    {{ sendEmail|raw }}
                </div>
            {% endif %}
            <div class="row">
                <div class="col-xs-12">
                    <header class="text-center">
                        <h2>Contactez-nous <img src="/assets/images/plume.png"></h2>
                        <p>N'hésitez pas à nous poser des questions.<br>Nous nous ferons un plaisir de vous répondre rapidement.</p>
                    </header>
                </div>
            </div>
            <div class="row">

                <ul id="Contact__informations" class="col-xs-12 col-md-4 {% if admin %}border-admin{% endif %}">
                    {% if admin %}
                        <a href="/contact/edit" type="button" class="btn btn-success btn-admin">Modifier</a>
                    {% endif %}
                    <li>
                        <div>

                            <i class="fas fa-compass fa-2x"></i>
                            <p>{{ contactInfo.0.title|raw }} :</p>
                            <p>{{ contactInfo.0.content|nl2br }}</p>
                        </div>
                    </li>

                    <li>
                        <div>
                            <i class="fab fa-earlybirds fa-2x"></i>
                            <p>{{ contactInfo.1.title|nl2br }} :</p>
                            <p>{{ contactInfo.1.content|nl2br }}</p>
                        </div>
                    </li>

                    <li>
                        <div>
                            <i class="fa fa-paper-plane fa-2x"></i>
                            <p>{{ contactInfo.2.title|nl2br }} :</p>
                            <p>{{ contactInfo.2.content|nl2br }}</p>
                        </div>
                    </li>
                </ul>
                <form name="contact_form" method="post" action="" class="col-xs-12 col-md-8">
                    <div class="form--item">
                        <label for="email"><span>E-mail&nbsp;*</span></label>
                        <input type="email" id="email" name="email" placeholder="Votre adresse email" value="{{ email }}">
                    </div>
                    <div class="form--item">
                        <label for="subject"><span>Sujet&nbsp;*</span></label>
                        <select id="subject" name="subject">
                            <option value="Candidature"
                                    {% if subject == "Candidature" %}selected="selected"{% endif %}
                            >Candidature</option>
                            <option value="Demande_d'informations"
                                    {% if subject == "Demande_d'informations" %}selected="selected"{% endif %}
                            >Demande d'informations</option>
                            <option value="Autres"
                                    {% if subject == "Autres" %}selected="selected"{% endif %}
                            >Autres</option>
                        </select>
                    </div>
                    <div class="form--item">
                        <label for="content"><span>Message&nbsp;*</span></label>
                        <textarea id="content" name="content" placeholder="Votre message ici">{{ content }}</textarea>
                    </div>

                    <div class="text-center">
                        <button type="submit" id="contact_form_submit" name="contact_form[submit]" class="button submit_button">Envoyer</button>
                    </div>
                </form>
            </div>
        </div>
{% endblock %}
    
 