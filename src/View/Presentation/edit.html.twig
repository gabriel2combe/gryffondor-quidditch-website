{% extends 'Presentation/presentation.html.twig' %}
{% block title %}Notre équipe{% endblock %}
{% block stylesheet %}
{{ parent() }}
{% endblock %}

{% block navbar %}{% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="card col-md-6 offset-md-3">
            <div class="card-header">
                <h1 class="mb-0 text-dark">Edition</h1>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <input hidden name="id" value="{{ presentation.id }}">
                    <div class="form-group">
                        <label for="title">Titre</label>
                        <input
                                type="text"
                                class="form-control"
                                id="title"
                                name="title"
                                value="{{ presentation.title }}"
                                placeholder=""
                        >
                    </div>
                    <div class="form-group">
                        <label for="content">Contenu</label>
                        <textarea
                                class="form-control"
                                name="content"
                                id="content"
                                placeholder=""
                        >{{ presentation.content }}</textarea>
                    </div>
                    <div class="form-group">
                        <h4 id="picture1-title">Photo n°1 actuelle :</h4>
                        <img src="{{ presentation.picture1 }}" alt="Picture 1" id="picture1-pic">
                        <label for="picture1">Changer photo n°1</label>
                        <input type="file" name="picture1" class="form-control-file" id="picture1" onchange="readURL(this);">
                    </div>


                    <div class="form-group">
                        <h4 id="picture2-title">Photo n°2 actuelle :</h4>
                        <img src="{{ presentation.picture2 }}" alt="Picture 2" id="picture2-pic">
                        <label for="picture2">Changer photo n°2</label>
                        <input type="file" name="picture2" class="form-control-file" id="picture2" onchange="readURL(this);">
                    </div>


                    <div class="form-group">
                        <h4 id="picture3-title">Photo n°3 actuelle :</h4>
                        <img src="{{ presentation.picture3 }}" alt="Picture 3" id="picture3-pic">
                        <label for="picture3">Changer photo n°3</label>
                        <input type="file" name="picture3" class="form-control-file" id="picture3" onchange="readURL(this);">
                    </div>
                    <button type="submit" class="btn btn-success">Enregistrer</button>
                    <a href="/presentation" type="button" class="btn btn-primary">Retour au site</a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}{% endblock %}
{% block javascript %}
{{ parent() }}
<script src="/assets/js/editPresentation.js"></script>
<script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: '#content'
    });
</script>
{% endblock %}
