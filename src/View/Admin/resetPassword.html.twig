{% extends 'Home/home.html.twig' %}
{% block navbar %}{% endblock %}
{% block content %}
    <div class="container py-5">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center mb-4">Administration</h1>
                <div class="row">
                    <div class="col-md-6 mx-auto">
                        <div class="card rounded-0">
                            <div class="card-header">
                                <h3 class="mb-0">Réinitialisation de mot de passe</h3>
                            </div>
                            <div class="card-body">
                                <form class="form" role="form" id="formLogin" method="POST">
                                    <div class="form-group">
                                        <label for="login">Identifiant</label>
                                        <input
                                                type="text"
                                                class="form-control form-control-lg rounded-0"
                                                name="login"
                                                id="login"
                                                value="{{ admin }}"
                                                required="required"
                                                placeholder="Entrez ici votre identifiant"
                                        >
                                    </div>
                                    <div class="form-group">
                                        <label for="login">Adresse email</label>
                                        <input
                                                type="email"
                                                class="form-control form-control-lg rounded-0"
                                                name="email"
                                                id="email"
                                                required="required"
                                                placeholder="Entrez ici l'adresse email liée à votre compte"
                                        >
                                    </div>
                                    <button
                                            type="submit"
                                            class="btn btn-success btn-lg float-right btn-custom"
                                            id="btnLogin"
                                    >Valider</button>
                                    <a
                                            href="{{ redirection.link }}"
                                            type="button"
                                            class="btn btn-primary btn-lg float-right btn-custom"
                                    >{{ redirection.title }}</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}